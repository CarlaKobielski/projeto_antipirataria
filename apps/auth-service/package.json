{
    "name": "@protecliter/auth-service",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "nest build",
        "dev": "nest start --watch",
        "start": "node dist/main",
        "start:prod": "node dist/main",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
    },
    "dependencies": {
        "@nestjs/common": "^10.3.0",
        "@nestjs/config": "^3.1.0",
        "@nestjs/core": "^10.3.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.3.0",
        "@protecliter/database": "workspace:*",
        "@protecliter/logger": "workspace:*",
        "@protecliter/shared-types": "workspace:*",
        "argon2": "^0.31.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "otplib": "^12.0.1",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "qrcode": "^1.5.3",
        "reflect-metadata": "^0.1.14",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.3.0",
        "@nestjs/schematics": "^10.1.0",
        "@nestjs/testing": "^10.3.0",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.0",
        "@types/passport-jwt": "^4.0.0",
        "@types/qrcode": "^1.5.5",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}